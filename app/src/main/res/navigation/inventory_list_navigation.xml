<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventory_list_navigation"
    app:startDestination="@id/inventory_list_destination">
    <fragment
        android:id="@+id/inventory_list_destination"
        android:name="tk.jonathancowling.inventorytracker.inventorylist.AndroidView"
        android:label="Inventory List"
        tools:layout="@layout/fragment_item_list">
        <action
            android:id="@+id/action_inventory_list_to_add_item"
            app:destination="@id/add_item_destionation" />
        <action
            android:id="@+id/action_inventory_list_to_report"
            app:destination="@id/report_destination" />
        <action
            android:id="@+id/action_inventory_list_to_settings"
            app:destination="@+id/settings_destination" />
    </fragment>
    <fragment
        android:id="@+id/add_item_destionation"
        android:name="tk.jonathancowling.inventorytracker.additem.AndroidView"
        android:label="Add Item"
        tools:layout="@layout/fragment_add_item" />
    <fragment
        android:id="@+id/report_destination"
        android:name="tk.jonathancowling.inventorytracker.report.AndroidView"
        android:label="Report Fragment"
        tools:layout="@layout/report_fragment">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="inventorytracker.jonathancowling.tk/report" />
    </fragment>
    <fragment
        android:id="@+id/login_destination"
        android:name="tk.jonathancowling.inventorytracker.authentication.AndroidLoginView"
        android:label="Login"
        tools:layout="@layout/fragment_logo_with_card">
        <action
            android:id="@+id/action_login_to_sign_up"
            app:destination="@id/sign_up_destination" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_destination"
        android:name="tk.jonathancowling.inventorytracker.authentication.AndroidSignUpView"
        android:label="Sign Up"
        tools:layout="@layout/content_sign_up" >
    </fragment>
    <fragment
        android:id="@+id/settings_destination"
        android:name="tk.jonathancowling.inventorytracker.settings.AndroidView"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>